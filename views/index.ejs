<%- include("header") -%>
<% cardList.forEach(function(card){ %>
  <div class="card">
    <h1 class="topic"><a href="card/<%=card.id%>"><%=card.topic%></a></h1>
    <hr>
    <input class="hiddennote" type="hidden" value="<%= card.note %> ">
    <div class="note"><%= card.note %></div>
    <center>
      <a href="edit/<%=card.id %>">
        <svg class="mx-auto edit" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
        </svg>
      </a>
      <form id="deleteForm" action="/delete" method="post">
        <input type="hidden" value="<%=card.id %>" name="cardId">
        <input class="edit" type="image" src="/images/trash.svg" width="32px" height="32px">
      </form>
    </center>
  </div>
<% }) %>

<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script> 
<script>
  var notes = document.getElementsByClassName("note")
  var hiddennotes = document.getElementsByClassName("hiddennote")
  console.log(notes)
  var i
  for(i=0; i < notes.length; i++){
    console.log(notes[i].innerText)
    notes[i].innerHTML = marked(hiddennotes[i].value)
  }

  notes.innerHTML = marked(notes.innerText)
</script>

<%- include("footer") -%>
